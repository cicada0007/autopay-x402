generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AgentRequest {
  id             String   @id @default(cuid())
  endpoint       String
  status         String   @default("PAYMENT_REQUIRED")
  retryCount     Int      @default(0)
  amount         Decimal  @default(0)
  currency       String
  facilitatorUrl String
  paymentHash    String?  @unique
  metadata       String?
  responseData   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  payments       Payment[]
  auditLogs      AuditLog[]
}

model Payment {
  id          String   @id @default(cuid())
  requestId   String
  request     AgentRequest @relation(fields: [requestId], references: [id])
  txHash      String   @unique
  amount      Decimal
  currency    String
  status      String   @default("PENDING")
  confirmedAt DateTime?
  failureCode String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  auditLogs   AuditLog[]
}

model BalanceSnapshot {
  id         String   @id @default(cuid())
  balance    Decimal
  status     String   @default("UNKNOWN")
  source     String   @default("poller")
  metadata   String?
  recordedAt DateTime @default(now())
}

model SystemState {
  id             Int      @id @default(1)
  paymentsPaused Boolean  @default(false)
  pauseReason    String?
  updatedAt      DateTime @updatedAt
}

model AutonomyTask {
  id               String   @id @default(cuid())
  endpoint         String   @unique
  status           String   @default("IDLE")
  valueScore       Float
  cost             Float
  freshnessSeconds Int      @default(300)
  backoffSeconds   Int      @default(30)
  lastScore        Float?
  lastRunAt        DateTime?
  lastSuccessAt    DateTime?
  failureCount     Int      @default(0)
  nextRunAt        DateTime?
  lockedAt         DateTime?
  lastError        String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model LedgerEvent {
  id         String   @id @default(cuid())
  timestamp  DateTime @default(now())
  category   String
  event      String
  requestId  String?
  paymentId  String?
  txHash     String?
  metadata   String?
  createdAt  DateTime @default(now())
}

model AuditLog {
  id         String   @id @default(cuid())
  category   String
  level      String   @default("INFO")
  message    String
  details    String?
  requestId  String?
  paymentId  String?
  createdAt  DateTime @default(now())
  request    AgentRequest? @relation(fields: [requestId], references: [id])
  payment    Payment? @relation(fields: [paymentId], references: [id])
}

model Session {
  id                String   @id @default(cuid())
  walletPublicKey   String
  sessionPublicKey  String   @unique
  nonce             String
  maxSignatures     Int
  signaturesUsed    Int      @default(0)
  status            String   @default("ACTIVE")
  expiresAt         DateTime
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

