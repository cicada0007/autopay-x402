# Shared environment configuration for Autopay Agent (copy values into a `.env` file locally)
# In production, store these secrets in a vault (e.g. Doppler, AWS Secrets Manager, 1Password).

# Solana / x402
SOLANA_RPC_URL=https://api.devnet.solana.com
PHANTOM_WALLET_PUBLIC_KEY=ReplaceWithDevnetPublicKey
PHANTOM_SESSION_PRIVATE_KEY=ReplaceWithBase58PrivateKey
PHANTOM_SESSION_EXPIRY_SECONDS=3600
COINBASE_FACILITATOR_API_KEY=ReplaceWithFacilitatorKey
COINBASE_FACILITATOR_SECRET=ReplaceWithFacilitatorWebhookSecret
COINBASE_FACILITATOR_BASE_URL=https://api.sandbox.coinbase.com/x402
BALANCE_THRESHOLD=0.05
BALANCE_POLL_INTERVAL_SECONDS=30
SESSION_MAX_SIGNATURES=3
SESSION_REFRESH_GRACE_SECONDS=300
PAYMENT_RECIPIENT_PUBLIC_KEY=ReplaceWithRecipientPublicKey
AUTONOMY_QUEUE_INTERVAL_SECONDS=20
AUTONOMY_MIN_RUN_SCORE=0.5
AUTONOMY_MAX_BACKOFF_SECONDS=900
ALLOWED_ORIGINS=http://localhost:3000
ADMIN_API_KEY=ReplaceWithStrongAdminKey
SECRETS_PROVIDER=env
AWS_REGION=us-east-1
AWS_SECRETS_MANAGER_SECRET_ID=

# Backend
PORT=4000
AUDIT_LOG_PATH=logs/transaction-audit.json
DATABASE_URL=file:./apps/backend/prisma/dev.db

# Frontend
NEXT_PUBLIC_BACKEND_URL=http://localhost:4000
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
NEXT_PUBLIC_AUTONOMY_PHASE=1
NEXT_PUBLIC_ADMIN_API_TOKEN=ReplaceWithStrongAdminKey

